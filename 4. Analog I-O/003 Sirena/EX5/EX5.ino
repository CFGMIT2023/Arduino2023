//********** Variables ************************************************************
const byte pito = 9;       
const byte pot0 = A0;        
const byte pot1 = A1;
int valPot0;                
int valPot1;
//********** Setup ****************************************************************
void setup()
{ 
  pinMode(pot0, INPUT);
  pinMode(pot1, INPUT);
  pinMode(pito, OUTPUT); 
}

//********** Loop *****************************************************************
void loop()
{
  valPot0 = analogRead(pot0);    
  valPot1 = analogRead(pot1);
  tone(pito, 1000, valPot0);    
  delay(valPot0 + valPot1);             
}

