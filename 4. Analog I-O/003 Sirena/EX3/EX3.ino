//********** Variables ************************************************************
const byte pito = 9;       
int tiempo = 500;
//********** Setup ****************************************************************
void setup()
{
  pinMode(pito, OUTPUT);  
}
  //********** Loop *****************************************************************
void loop()
{

  tone(pito, 1250, 2500);   
  delay(tiempo);                 

  tone(pito, 1200, 3000);    
  delay(tiempo);                 

  tone(pito, 1000, 1000);   
  delay(tiempo);                
  
  tone(pito, 1600, 2000);   
  delay(tiempo);                


  tone(pito, 0, 2000);  
  delay(tiempo);                
}